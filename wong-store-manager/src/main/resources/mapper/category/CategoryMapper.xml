<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wong.store.manager.mapper.CategoryMapper">
    <!--  映射查询到的字段 -->
    <resultMap id="categoryMap" type="com.wong.store.model.entity.product.Category"/>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,name,image_url,parent_id,status,order_num,create_time,update_time,is_deleted
    </sql>

    <!-- 根据父分类Id获取子分类 -->
    <select id="queryByParentId" resultMap="categoryMap">
        SELECT
        <include refid="columns"/>
        FROM category
        WHERE parent_id = #{parentId}
        AND is_deleted = 0
        ORDER BY id
        DESC
    </select>

    <!-- 根据父分类Id获取子分类数量 -->
    <select id="countByParentId" resultType="java.lang.Integer">
        SELECT COUNT(id)
        FROM category
        WHERE parent_id = #{parentId}
          AND is_deleted = 0
    </select>

    <!-- 查询所有分类 -->
    <select id="queryAll" resultMap="categoryMap">
        SELECT
        <include refid="columns"/>
        FROM category
        WHERE is_deleted = 0
        ORDER BY id DESC
    </select>

    <!-- 批量添加分类 -->
    <insert id="saveBatch">
        INSERT INTO category(name, image_url, parent_id, status, order_num)
        VALUES
        <foreach collection="categoryList" item="category" separator=",">
            (#{category.name}, #{category.imageUrl}, #{category.parentId}, #{category.status}, #{category.orderNum})
        </foreach>
    </insert>
</mapper>