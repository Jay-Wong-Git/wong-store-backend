<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wong.store.manager.mapper.SysRoleMapper">
    <!--  映射查询到的字段 -->
    <resultMap id="sysRoleMap" type="com.wong.store.model.entity.system.SysRole" autoMapping="true"/>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>

    <!-- 用于设置查询条件 -->
    <sql id="queryCriteria">
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name like CONCAT('%',#{roleName},'%')
            </if>
            and is_deleted = 0
        </where>
    </sql>

    <!--  查询角色列表  -->
    <select id="querySysRole" resultMap="sysRoleMap">
        SELECT
        <include refid="columns"/>
        FROM sys_role
        <include refid="queryCriteria"/>
        ORDER BY id DESC
    </select>

    <!--  添加角色  -->
    <insert id="saveSysRole">
        INSERT INTO sys_role(id, role_name, role_code, description)
        VALUES (#{id}, #{roleName}, #{roleCode}, #{description})
    </insert>

    <!--  修改角色  -->
    <update id="updateSysRole">
        UPDATE sys_role SET
        <if test="roleName != null and roleName != ''">
            role_name = #{roleName},
        </if>
        <if test="roleCode != null and roleCode != ''">
            role_code = #{roleCode},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        update_time = NOW()
        WHERE id = #{id}
    </update>

    <!--  删除角色  -->
    <update id="deleteSysRoleById">
        UPDATE sys_role
        SET is_deleted = 1
        WHERE id = #{roleId}
    </update>
</mapper>